
{%	extends	"::base.html.twig"	%}	

{%	block	title	%}{{	parent()	}}	-	Index{%	endblock	%}	
{%	block	body	%}	
				

		
			<div class="content">
					<div id="pad-wrapper" class="user-profile">
						<div class="row header">
							<div class="col-md-8">
								<img src="{{artist_spotify.images[0].url}}" alt="contact" class="avatar img-circle" ></div>
								
								
								<strong><h3 class="name">{{ artist_spotify.name|upper }}</h3></strong></br></br>
								{% for genre in artist_spotify.genres %}
									<strong><a class="btn-flat gray ">{{ genre|upper }}</strong></a></br></br>
