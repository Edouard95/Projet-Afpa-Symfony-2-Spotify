											<div class="param">
												<span class="line blue"></span>
												 <h3><strong>Popularit√©</strong><h3></br></br>

                                                <a	href="{{	path('afpaartist_sauvegarde',	{	'id':	artist_spotify.id	})	}}">										
												 <button type="button" class="btn-glow primary btn-next" data-last="Finish">
		                                         save <i class="icon-chevron-right"></i>
		                        				 </button>
		                        				</a>

											</div>
										</div>
									</div>                       
								</div>
							</div>
						</div>
					
					

		{%	endblock	%}
					
					
